<%- include('../include/header.ejs') %>
<link rel="stylesheet" href="/stylesheets/research_fields/researchFieldsMain.css"/>
<link rel="stylesheet" href="/stylesheets/research_fields/researchFieldsDetail.css"/>
    <section>
        <div id="indexbg" class="mb-5"></div>
        <div id="indexbg_text">
            <h1 class="fs-1">연구 분야</h1>
          
        </div>
        <div class="container-fluidp-3 p-3">
            <div class="row">
                <div id="researchDetailContent" class="col-12">
                    <h3 class="mb-5" align=center><%=detailData[0].research_name_ko%></h3>
                    <article class="container">
                      <table class="table table-responsive-sm text-center">
                        <tbody>
                          <tr>
                            <th>연구책임자</th>
                            <td colspan=3><%=detailData[0].research_manager_ko%></td>
                          </tr>
                          <tr>
                            <th class="align-middle">소속</th>
                            <td><%=detailData[0].research_belong_ko%></td>
                            <th class="align-middle">총 연구기간</th>
                            <td><%=detailData[0].date_start%> ~ <%=detailData[0].date_end%></td>
                          </tr>
                          <tr>
                            <th>과제명</th>
                            <td colspan=3><%=detailData[0].research_name_ko%></td>
                          </tr>
                          <tr>
                            <th>사업명</th>
                            <td colspan=3><%=detailData[0].business_name_ko%></td>
                          </tr>
                          <tr>
                            <th>부처</th>
                            <td><%=detailData[0].department_name_ko%></td>
                            <th>주관기관</th>
                            <td><%=detailData[0].subjectivity_agency_ko%></td>
                          </tr>
                          <tr>
                            <th>지원기관</th>
                            <td><%=detailData[0].support_agency_ko%></td>
                            <th>참여기관</th>
                            <td><%=detailData[0].participation_agency_ko%></td>
                          </tr>
                          <tr>
                            <th>연구 목표</th>
                            <td colspan=3><%=detailData[0].research_goal_ko%></td>
                          </tr>
                          <tr>
                            <th class="align-middle">연구 내용</th>
                            <td colspan=3 class="text-break"><%=detailData[0].research_content_ko%></td>
                          </tr>
                          <tr>
                            <th class="align-middle">기대 성과</th>
                            <td colspan=3 class="text-break"><%=detailData[0].expectation_result_ko%></td>
                          </tr>
                        </tbody>
                    </table>
                    </article>

                    <!-- 없을땐 출력 X -->
                    <% if(!(photoData==undefined||photoData=='')){ %>
                      <hr class="m-5">
                      <article>
                        <h3 class="mb-5" align=center>Photos</h3>
                        <div align=center class="m-2">
                          <%for(var key in photoData){%>
                            <img src="/images/research_fields/<%=photoData[key].img_src%>" class="carouselNav mr-4" data-target="#researchCarousel" data-slide-to="<%= key%>">
                          <%}%>
                        </div>
  
                        <div id="researchCarousel" class="carousel slide mx-auto" data-ride="carousel">
                          <div class="carousel-inner">
                            <%for(var key in photoData){%>
                              <%if(key==0){%>
                                <div class="carousel-item active">
                              <%}else{%>
                                <div class="carousel-item">
                              <%}%>
                              <img src="/images/research_fields/<%=photoData[key].img_src%>" class="d-block w-100 carouselImg">
                              <!-- <div class="carousel-caption d-none d-md-block">
                                <h5><%=photoData[key].subtitile_ko%></h5>
                                <p><%=photoData[key].content_ko%></p>
                              </div> -->
                            </div>
                            <%}%>
                          </div>
                          <a class="carousel-control-prev" href="#researchCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                          </a>
                          <a class="carousel-control-next" href="#researchCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                          </a>
                          
                        </div>
                        
                      </article>
                    <%}%>
                    
                    <!-- 없을땐 출력 X -->
                    <% if(!(photoData==undefined||photoData=='')){ %>
                      <hr class="m-5">
                      <article>
                        <div class="container">
                          <div class="row">
                            <div class="col-6 col-md-4" style=" border-right:1px solid black">
                              <h3 class="mb-5" align=center>참고 Link</h3>
                            </div>
                            <div class="col-md-8">
                              <%for(var key in linkData){%>
                                <a href="<%=linkData[key].link_src%>">◈ <%=linkData[key].link_src%> </a> <br>
                              <%}%>
                            </div>
                          </div>
                        </div>
                        
                      </article>
                    <%}%>
                
                </div>
                <div class="container">
            
                  <a type="button" class="btn btn-outline-secondary" href="javascript:history.back();">목록</a> 
                  <a type="button" class="btn btn-outline-secondary" href="/research/fields/modify?num=<%=detailData[0].rfid%>">수정</a> 
                  <a type="button" class="btn btn-outline-danger" style="float: right;" href="/research/fields/delete?num=<%=detailData[0].rfid%>">삭제</a> 
            </div>
    </section>
    <%- include('../include/footer.ejs') %>