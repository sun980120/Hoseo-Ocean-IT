<%- include('../../include/header.ejs') %>

    <link rel="stylesheet" href="/stylesheets/board.css" />
    <section>
        <div id="indexbg" class="mb-5"></div>
        <div id="indexbg_text">
            <h1 class="fs-1">자유 게시판</h1>
        
        </div>
        <div class="container">
            <div class="row">
                <div id="researchDetailContent" class="col-12">
                    <h1 class="mb-5" align=center>
                        Ocean-IT
                    </h1>
                    <article>
                        <table class="table table-responsive-sm text-center"
                            style="box-shadow: 0 4px 8px 0 rgb(0, 0, 0, 0.2);">
                            <div class="row">
                                <thead>
                                    <tr style="font-size: 28px;">
                                        <th colspan="2" bgcolor="#dbdbdb">
                                            <%=detailData[0].title%>
                                        </th>å
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr style="font-size: 23px;">
                                        <td style="width: 15%;">작성자</td>
                                        <td colspan="2">
                                            <%=detailData[0].userName%>
                                        </td>
                                    </tr>
                                    <tr style="font-size: 23px;">
                                        <td>작성일</td>
                                        <td colspan="2">
                                            <%=dayjs(detailData[0].date).format('YYYY-MM-DD HH:mm:ss');%>
                                        </td>
                                    </tr>
                                    <tr style="font-size: 23px;">
                                        <td>내용</td>
                                        <td colspan="2" style="text-align: left;word-break: break-all;">
                                            <%=detailData[0].content%>
                                        </td>
                                    </tr>
                                </tbody>
                        </table>
                    </article>
                    <form method="POST" action="/board/free/delete?num=<%=detailData[0].qid%>">
                        <a type="button" class="btn btn-outline-secondary" href="javascript:history.back();">목록</a>
                        <a href="/board/free/freeBoardModify?num=<%=detailData[0].qid%>"
                            class="btn btn-outline-secondary">수정</a>

                        <button class="btn btn-outline-secondary">삭제</button>
                    </form>


                </div>
            </div>
            <br><br>
            <form action="/board/free/freeBoardComment?num=<%=detailData[0].qid%>" method="POST">
                <div style="background-color: #ffffff;">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="댓글을 입력해주세요"
                            aria-label="Recipient's username" aria-describedby="basic-addon2" name="comment">
                        <div class="input-group-append">
                            <input type="submit" class="input-group-text" id="basic-addon2" value="댓글">
                        </div>
                    </div>
                    <% if(commentData){%>
                        <%for(var i=0;i<commentData.length;i++){ var data1=commentData[i];%>
                            <div style="border-bottom: 1px solid;">
                                <div style="font-size: 6px; color: #7b7b7b;">
                                    <%=data1.date%>
                                </div>
                                <div style="font-size: 18px;">
                                    <%=data1.comment%>
                                </div>
                                <div class ="text-right">
                                  작성자:  <%=data1.userName%>
                                </div>
                            </div>
                            <%}}%>
                </div>
                <br><br>
            </form>
        </div>
    </section>
    <%- include('../../include/footer.ejs') %>