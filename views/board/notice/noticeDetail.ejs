<%- include('../../include/header.ejs') %>

    <link rel="stylesheet" href="/stylesheets/board.css" />
    <section>
        <div id="indexbg" class="mb-5"></div>
        <div id="indexbg_text">
            <h1 class="fs-1">공지 사항</h1>
     
        </div>
        <div class="container">
            <div class="row">
                <div id="researchDetailContent" class="col-12">
                    <h1 class="mb-5" align=center>
                        Ocean-IT
                    </h1>
                    <article>
                        <table class="table table-responsive-sm text-center"
                            style="box-shadow: 0 4px 8px 0 rgb(0, 0, 0, 0.2);">
                            <div class="row">
                                <thead>
                                    <tr style="font-size: 28px;">
                                        <th colspan="2" bgcolor="#dbdbdb">
                                            <%=detailData[0].title%>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr style="font-size: 23px;">
                                        <td style="width: 15%;">작성자</td>
                                        <td colspan="2">
                                            <%=detailData[0].userId%>
                                        </td>
                                    </tr>
                                    <tr style="font-size: 23px;">
                                        <td>작성일</td>
                                        <td colspan="2">
                                            <%=dayjs(detailData[0].date).format('YYYY-MM-DD HH:mm:ss');%>
                                        </td>
                                    </tr>
                                    <tr style="font-size: 23px;">
                                        <td>내용</td>
                                        <td colspan="2" style="text-align: left; word-break: break-all;">
                                            <%=detailData[0].content%>
                                        </td>
                                    </tr>
                                </tbody>
                        </table>
                    </article>
                    <form method="POST" action="/board/notice/delete?num=<%=detailData[0].qid%>">
                        <a type="button" class="btn btn-outline-secondary" href="javascript:history.back();">목록</a>
                        <a href="/board/notice/noticeModify?num=<%=detailData[0].qid%>"
                            class="btn btn-outline-secondary">수정</a>

                        <button class="btn btn-outline-secondary">삭제</button>
                    </form>
                </div>
            </div>
        </div>
        <br><br>
    </section>
    <%- include('../../include/footer.ejs') %>